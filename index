    <script>
        // لۆگین
        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // لۆجینی سادە (بۆ نموونە)
            if (username === 'admin' && password === '1234') {
                document.getElementById('login-page').classList.remove('active');
                document.getElementById('main-page').classList.add('active');
            } else {
                alert('ناوی بەکارهێنەر یان وشەی نهێنی هەڵەیە');
            }
        });

        // وەرگرتنی بەشەکان
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(sectionId).style.display = 'block';
        }

        // چوونەدەر
        function logout() {
            document.getElementById('main-page').classList.remove('active');
            document.getElementById('login-page').classList.add('active');
            document.getElementById('login-form').reset();
        }

        // تۆمارکردنی کاڵا
        document.getElementById('product-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('product-name').value;
            const price = document.getElementById('product-price').value;
            const quantity = document.getElementById('product-quantity').value;

            const row = document.createElement('tr');
            row.innerHTML = `<td>${name}</td><td>${price}</td><td>${quantity}</td>`;
            document.getElementById('product-list').appendChild(row);

            // پاککردنەوەی فۆرم
            document.getElementById('product-form').reset();
        });

        // تۆمارکردنی کڕین
        document.getElementById('purchase-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const product = document.getElementById('purchase-product').value;
            const quantity = document.getElementById('purchase-quantity').value;
            const date = new Date().toLocaleString('ku-IQ');

            const row = document.createElement('tr');
            row.innerHTML = `<td>${product}</td><td>${quantity}</td><td>${date}</td>`;
            document.getElementById('purchase-list').appendChild(row);

            document.getElementById('purchase-form').reset();
        });

        // تۆمارکردنی فرۆشتن
        document.getElementById('sale-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const product = document.getElementById('sale-product').value;
            const quantity = document.getElementById('sale-quantity').value;
            const date = new Date().toLocaleString('ku-IQ');

            const row = document.createElement('tr');
            row.innerHTML = `<td>${product}</td><td>${quantity}</td><td>${date}</td>`;
            document.getElementById('sale-list').appendChild(row);

            document.getElementById('sale-form').reset();
        });

        // تۆمارکردنی قەرز
        document.getElementById('debt-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const debtor = document.getElementById('debtor-name').value;
            const amount = document.getElementById('debt-amount').value;

            const row = document.createElement('tr');
            row.innerHTML = `<td>${debtor}</td><td>${amount}</td>`;
            document.getElementById('debt-list').appendChild(row);

            document.getElementById('debt-form').reset();
        });
        // تۆمارکردنی ئینڤۆیز
        document.getElementById('invoice-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const customer = document.getElementById('invoice-customer').value;
            const product = document.getElementById('invoice-product').value;
            const quantity = document.getElementById('invoice-quantity').value;
            const date = new Date().toLocaleString('ku-IQ');

            const row = document.createElement('tr');
            row.innerHTML = `<td>${customer}</td><td>${product}</td><td>${quantity}</td><td>${date}</td>`;
            document.getElementById('invoice-list').appendChild(row);

            document.getElementById('invoice-form').reset();
        });
    </script>
